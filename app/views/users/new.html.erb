<div class="col-sm-4 col-sm-offset-4">
  <legend>Sign Up</legend>
  <%= form_for @user do |f| %>
    <% flash.each do |name, msg| %>
      <% msg.each do |m| %>
        <%= content_tag :div, m, class: "#{name} error" %>
      <% end%>
    <% end %>
    <div class="control-group">
      <%= f.label "Role", class: 'control-label'%><br>
      <div class='controls'>
        <%= f.select(:role, options_for_select([['STUDENT', 'STUDENT'], ['MENTOR', 'MENTOR']])) %>
      </div>
    </div>
    <%= f.label :username %>:
    <%= f.text_field :username, class:"form-control" %><br />
    <%= f.label :image %>:
    <%= f.text_field :image, class:"form-control" %><br />
    <%= f.label :description %>:
    <%= f.text_field :info, class:"form-control" %><br />
    <%= f.label :email %>:
    <%= f.email_field :email, class:"form-control" %><br />
    <%= f.label :password %>:
    <%= f.password_field :password, class:"form-control" %><br />
     


     <%= f.submit "Sign Up", class:"btn btn-primary" %>
  <% end %>
</div>
